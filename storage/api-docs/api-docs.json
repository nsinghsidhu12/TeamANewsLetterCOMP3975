{
    "openapi": "3.0.0",
    "info": {
        "title": "Newsletters API",
        "description": "Newsletters API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get all articles",
                "description": "Read all the articles in the database",
                "operationId": "index",
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/articles/store": {
            "post": {
                "tags": [
                    "Articles"
                ],
                "summary": "Create a new article",
                "description": "Create a new article",
                "operationId": "store",
                "requestBody": {
                    "description": "Pass article data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "image_placement"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Article Title"
                                    },
                                    "description": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Article Description"
                                    },
                                    "image_placement": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "left"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "example": "image.jpg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/articles/show/{ArticleID}": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get article by id",
                "description": "Read article by id",
                "operationId": "show",
                "parameters": [
                    {
                        "name": "ArticleID",
                        "in": "path",
                        "description": "ID of article to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/articles/edit/{ArticleID}": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Get article by id",
                "description": "Read article by id",
                "operationId": "edit",
                "parameters": [
                    {
                        "name": "ArticleID",
                        "in": "path",
                        "description": "ID of article to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/articles/update/{id}": {
            "put": {
                "tags": [
                    "Articles"
                ],
                "summary": "Update article by id",
                "description": "Update article by id",
                "operationId": "update",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of article to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Pass article data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "description",
                                    "image_placement"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Article Title"
                                    },
                                    "description": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Article Description"
                                    },
                                    "image_placement": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "left"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "example": "image.jpg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/articles/destroy/{ArticleID}": {
            "get": {
                "tags": [
                    "Articles"
                ],
                "summary": "Delete article by id",
                "description": "Delete article by id",
                "operationId": "destroy",
                "parameters": [
                    {
                        "name": "ArticleID",
                        "in": "path",
                        "description": "ID of article to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/api/newsletters/lastfive": {
            "get": {
                "tags": [
                    "Newsletters"
                ],
                "summary": "Get the last five active newsletters",
                "description": "Get the last five active newsletters",
                "operationId": "lastFiveNewsletters",
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Article": {
                "required": [
                    "ArticleID",
                    "Title",
                    "Description"
                ],
                "properties": {
                    "ArticleID": {
                        "description": "The ID of an article",
                        "type": "integer",
                        "example": "1"
                    },
                    "NewsletterID": {
                        "description": "The ID of a newsletter that an article is assigned to",
                        "type": "integer",
                        "example": "1"
                    },
                    "Title": {
                        "description": "The title of an article",
                        "type": "string",
                        "example": "The Great Article"
                    },
                    "Description": {
                        "description": "The description of an article",
                        "type": "string",
                        "example": "Just a simple description of an article"
                    },
                    "Image": {
                        "description": "The URL of an article's image",
                        "type": "string",
                        "example": "https://via.placeholder.com/640x480.png/000055?text=est"
                    },
                    "ImagePlacement": {
                        "description": "The placement for an article's image.",
                        "type": "string",
                        "example": "Left"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Article"
                }
            },
            "Newsletter": {
                "required": [
                    "NewsletterID",
                    "Logo",
                    "Date",
                    "Title",
                    "IsActive"
                ],
                "properties": {
                    "NewsletterID": {
                        "description": "The ID of a newsletter",
                        "type": "integer",
                        "readOnly": "true",
                        "example": "1"
                    },
                    "Logo": {
                        "description": "The URL of a newsletter's logo",
                        "type": "string",
                        "example": "https://via.placeholder.com/640x480.png/00ee44?text=sed"
                    },
                    "Date": {
                        "description": "The date of a newsletter",
                        "type": "string",
                        "example": "2020-01-01"
                    },
                    "Title": {
                        "description": "The title of a newsletter",
                        "type": "string",
                        "example": "The Great Newsletter"
                    },
                    "IsActive": {
                        "description": "Determines if a newsletter is active",
                        "type": "integer",
                        "example": "1"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Newsletter"
                }
            }
        }
    }
}